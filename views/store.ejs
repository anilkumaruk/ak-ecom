<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title><%= store.storeName %> | My Store</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <style>
    body {
      font-family: 'Segoe UI', sans-serif;
      margin: 0;
      padding: 0;
      background-color: #f1f3f6;
    }

    header {
      background: #0d47a1;
      color: white;
      padding: 12px 20px;
    }

    header h1 {
      margin: 0;
    }

    .product-list {
      padding: 20px;
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(160px, 1fr));
      gap: 20px;
    }

    .product {
      background: white;
      border-radius: 8px;
      box-shadow: 0 1px 4px rgba(0,0,0,0.1);
      padding: 10px;
      text-align: center;
    }

    .product img {
      width: 100%;
      height: 140px;
      object-fit: cover;
      border-radius: 4px;
    }

    .product h3 {
      font-size: 14px;
      margin: 8px 0 4px;
    }

    .product p {
      margin: 0;
      color: green;
      font-weight: bold;
    }
  </style>
</head>
<body>
  <header>
    <h1><%= store.storeName %></h1>
  </header>

  <div class="product-list">
    <% products.forEach(product => { %>
      <div class="product">
        <img src="<%= product.image || `https://via.placeholder.com/200x140?text=${encodeURIComponent(product.name)}` %>" alt="<%= product.name %>">
        <h3><%= product.name %></h3>
        <p>â‚¹<%= product.price %></p>
      </div>
    <% }) %>
  </div>
</body>
</html>
